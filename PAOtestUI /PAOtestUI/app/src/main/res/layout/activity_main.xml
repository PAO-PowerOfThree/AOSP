<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_light"
    tools:context=".MainActivity">

    <!-- ðŸ”¹ Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Profile"
            android:padding="4dp"
            android:src="@drawable/ic_profile" />

        <!-- Time -->
        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="12:45"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Status Icons Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/darkModeToggle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Toggle Dark Mode"
                android:src="@drawable/ic_dark_mode" />

            <ImageView
                android:id="@+id/wifiIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="WiFi"
                android:src="@drawable/ic_wifi" />

            <ImageView
                android:id="@+id/bluetoothIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Bluetooth"
                android:src="@drawable/ic_bluetooth" />

            <ImageView
                android:id="@+id/batteryIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="Battery"
                android:src="@drawable/ic_battery" />

        </LinearLayout>

        <!-- Improved Voice FAB with better sizing and centering -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/voice_fab"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="12dp"
            android:contentDescription="Voice Assistant"
            app:backgroundTint="@color/black"
            app:srcCompat="@drawable/ic_microphone"
            app:tint="@color/white"
            app:fabSize="normal"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            app:rippleColor="@color/nice_color"
            app:borderWidth="0dp" />
    </LinearLayout>

    <!-- Mini Voice Widget Overlay (Initially Hidden) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mini_voice_widget"
        android:layout_width="360dp"
        android:layout_height="172dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:elevation="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Widget Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/widget_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Voice Assistant"
                    android:textColor="@color/nice_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/widget_close_btn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@color/nice_color"
                    android:contentDescription="Close"
                    android:src="@drawable/ic_mic_off"
                    app:tint="@color/black" />
            </LinearLayout>

            <!-- Waveform Container -->
            <FrameLayout
                android:id="@+id/widget_waveform_container"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@color/black">

                <!-- Custom Waveform View will be added programmatically -->
                <com.example.testui.MiniWaveformView
                    android:id="@+id/widget_waveform"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <!-- Status Text -->
            <TextView
                android:id="@+id/widget_status_text"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:gravity="center"
                android:text="Tap to start listening"
                android:textColor="@color/nice_color"
                android:textSize="11sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- ðŸ”¹ Left Navigation Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/leftNavBar"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/leftNavInner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_background_light"
            android:gravity="center"
            android:orientation="vertical">

            <!-- HOME -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/homeIcon"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:contentDescription="Home"
                    android:src="@drawable/home" />

                <TextView
                    android:id="@+id/homeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="HOME"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- PHONE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/phoneIcon"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:contentDescription="Phone"
                    android:src="@drawable/ic_phone" />

                <TextView
                    android:id="@+id/phoneText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="PHONE"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- UPDATES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/updatesIcon"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:contentDescription="Updates"
                    android:src="@drawable/updates" />

                <TextView
                    android:id="@+id/updatesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="UPDATES"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- SETTINGS -->
            <LinearLayout
                android:id="@+id/settingsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/settingsIcon"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:contentDescription="Settings"
                    android:src="@drawable/isettings" />

                <TextView
                    android:id="@+id/settingsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="SETTINGS"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/leftNavBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible" />

    <!-- ðŸ”¹ Control Cards Grid -->
    <GridLayout
        android:id="@+id/controlGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="63dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintStart_toEndOf="@id/leftNavBar"
        app:layout_constraintTop_toBottomOf="@id/topBar" />

    <!-- ðŸ”¹ Music Player Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/musicCard"
        android:layout_width="331dp"
        android:layout_height="557dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"
        app:cardBackgroundColor="#F0F0F0"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/leftNavBar">

        <LinearLayout
            android:id="@+id/musicInner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_background_light"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <ImageView
                android:id="@+id/albumArt"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_music_note"
                android:scaleType="centerCrop"
                android:contentDescription="Album Art" />

            <TextView
                android:id="@+id/songTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song Title"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist Name"
                android:textSize="16sp"
                android:textColor="#666666" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <ImageButton
                    android:id="@+id/previousBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_media_previous"
                    android:background="@android:color/transparent"
                    android:contentDescription="Previous"
                    app:tint="@color/black"/>

                <ImageButton
                    android:id="@+id/playBtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@android:drawable/ic_media_play"
                    android:background="@android:color/transparent"
                    android:contentDescription="Play"
                    app:tint="@color/black"/>

                <ImageButton
                    android:id="@+id/nextBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_media_next"
                    android:background="@android:color/transparent"
                    android:contentDescription="Next"
                    app:tint="@color/black"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ðŸ”¹ Car Image -->
    <ImageView
        android:id="@+id/carImage"
        android:layout_width="578dp"
        android:layout_height="345dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="56dp"
        android:scaleType="fitCenter"
        android:src="@drawable/car_transparent"
        app:layout_constraintBottom_toTopOf="@+id/rightCard"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ”¹ Circle Overlay -->
    <com.example.testui.IconCircleOverlayView
        android:id="@+id/circleOverlay"
        android:layout_width="616dp"
        android:layout_height="431dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/carImage"
        app:layout_constraintEnd_toEndOf="@+id/carImage"
        app:layout_constraintHorizontal_bias="0.815"
        app:layout_constraintStart_toStartOf="@+id/carImage"
        app:layout_constraintTop_toTopOf="@+id/carImage"
        app:layout_constraintVertical_bias="0.488" />

    <!-- ðŸ”¹ Weather Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/rightCard"
        android:layout_width="332dp"
        android:layout_height="198dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="40dp"
        app:cardBackgroundColor="#F0F0F0"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/leftCard"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/carImage">

        <LinearLayout
            android:id="@+id/weatherInner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_background_light"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_weather_sunny"
                android:contentDescription="Weather Icon" />

            <TextView
                android:id="@+id/tempText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28Â°C"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/conditionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunny"
                android:textSize="18sp"
                android:textColor="#444444" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ðŸ”¹ Fuel/Energy Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/leftCard"
        android:layout_width="297dp"
        android:layout_height="198dp"
        app:cardBackgroundColor="#F0F0F0"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/rightCard"
        app:layout_constraintEnd_toEndOf="@+id/carImage"
        app:layout_constraintStart_toEndOf="@+id/rightCard">

        <LinearLayout
            android:id="@+id/fuelInner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_background_light"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fuelIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_battery"
                android:contentDescription="Fuel Icon" />

            <TextView
                android:id="@+id/fuelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Energy"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/fuelLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85%"
                android:textSize="24sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/frag_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:background="@android:color/transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>

