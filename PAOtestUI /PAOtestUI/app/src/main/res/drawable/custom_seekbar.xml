<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background track (inactive, gray, rounded) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC"/> <!-- Neutral gray; adjust as needed -->
            <size android:height="8dp"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <!-- Progress track (active, tintable, rounded) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent"/> <!-- Tinted in code via progressTintList -->
                <size android:height="8dp"/>
                <corners android:radius="4dp"/>
            </shape>
        </clip>
    </item>
</layer-list>